@model IssueTracker_CoreServices.Models.Project

@{
    ViewData["Title"] = "Create";
}

<h1>New Project</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="VersionControlURL" class="control-label"></label>
                <input asp-for="VersionControlURL" class="form-control" />
                <span asp-validation-for="VersionControlURL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary mb-2" />
            </div>
        </form>
    </div>
</div>

<div class=""> 
    <input type="button" value="Back to List" class="btn btn-secondary btn-sm" onclick="location.href='@Url.Action("Index", "Projects")'" />
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
