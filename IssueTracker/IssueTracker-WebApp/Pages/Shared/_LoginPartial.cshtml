@using Microsoft.AspNetCore.Identity
@using IssueTracker_CoreServices.Models;
@inject SignInManager<TrackerUser> SignInManager
@inject UserManager<TrackerUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
        TrackerUser trackerUser = (TrackerUser)await UserManager.GetUserAsync(User);
        <li class="nav-item">
        <a  class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello, @trackerUser.FirstName</a>
    </li>
    <li class="nav-item">
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post" >
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
